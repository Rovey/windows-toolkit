<UserControl x:Class="WindowsToolkit.UI.Views.PackageManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WindowsToolkit.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Description -->
        <TextBlock Grid.Row="0"
                   Text="Automatically install your favorite programs with one click. Select the packages you want and click Install."
                   FontSize="13"
                   Foreground="#7F8C8D"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10,8"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="ðŸ”"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             FontSize="13">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Search packages..."
                                                                   Foreground="#95A5A6"
                                                                   FontSize="13"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Install Selected"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding InstallSelectedCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Install All"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding InstallAllCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Refresh"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RefreshPackagesCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Package List -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Packages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0"
                                    BorderThickness="0,0,0,1"
                                    Padding="15"
                                    Background="Transparent">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F9F9F9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsSelected}"
                                              IsEnabled="{Binding IsInstalled, Converter={StaticResource InverseBoolConverter}}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,15,0"/>

                                    <!-- Package Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="12"
                                                   Foreground="#7F8C8D"
                                                   TextWrapping="Wrap"
                                                   Margin="0,3,0,0"/>
                                        <TextBlock FontSize="11"
                                                   Foreground="#95A5A6"
                                                   Margin="0,3,0,0">
                                            <Run Text="Category:"/>
                                            <Run Text="{Binding Category}" FontWeight="Medium"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="2"
                                            Background="{Binding IsInstalled, Converter={StaticResource InstallStatusColorConverter}}"
                                            CornerRadius="3"
                                            Padding="8,4"
                                            Margin="0,0,15,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding InstallationStatus}"
                                                   FontSize="11"
                                                   FontWeight="Medium"
                                                   Foreground="White"/>
                                    </Border>

                                    <!-- Package ID -->
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding Id}"
                                               FontSize="11"
                                               Foreground="#BDC3C7"
                                               VerticalAlignment="Center"
                                               FontFamily="Consolas"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="#ECF0F1"
                CornerRadius="5"
                Padding="15,10"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="#2C3E50"
                           VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="1"
                             Value="{Binding InstallProgress}"
                             Height="10"
                             Margin="15,0"
                             Visibility="{Binding IsInstalling, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <TextBlock Grid.Column="2"
                           FontSize="12"
                           Foreground="#7F8C8D"
                           VerticalAlignment="Center">
                    <Run Text="{Binding Packages.Count, Mode=OneWay}"/>
                    <Run Text="packages available"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
